class Solution {
public:
    int isPrefixOfWord(string sentence, string searchWord) {
        int index = 0;  // To track the current word's index
        int wordStart = 0;  // To track the start of each word in the sentence
        
        for (int i = 0; i <= sentence.size(); i++) {
            // Check if it's the end of a word or end of the sentence
            if (i == sentence.size() || sentence[i] == ' ') {
                index++;  // Increment word index
                // Check if searchWord is a prefix of the current word
                if (sentence.compare(wordStart, searchWord.size(), searchWord) == 0) {
                    return index;
                }
                wordStart = i + 1;  // Move to the start of the next word
            }
        }
        return -1;  // Return -1 if no word matches
    }
};
